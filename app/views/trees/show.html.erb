			<input id="btnTrace" type="submit" value="Create trace"/>
			<input id="btnTheta" type="submit" value="Toggle theta"/>
			<input id="btnCase" type="submit" value="Toggle case"/>
			<input id="btnTriangle" type="submit" value="Toggle triangle"/>
			<input id="btnContent" type="submit" value="Toggle contents"/>
			<input id="btnPretty" type="submit" value="Organize"/>
			<input id="btnSave" type="submit" value="Save  "/>
			<span id="saveMessage"></span>
			<a style="position: relative; left: 60px;" href="/contact">Questions / comments</a>
		</div>
	</div>

